{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vyductan-apps",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "@vyductan/*",
    "@vyductan/tooling/*"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean",
    "db:push": "turbo -F db push",
    "db:studio": "turbo -F db studio",
    "dev": "turbo dev --parallel",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check"
  },
  "prettier": "@vyductan/prettier-config",
  "eslintConfig": {
    "extends": [
      "@vyductan/eslint-config/base",
      "@vyductan/eslint-config/react",
      "@vyductan/eslint-config/nextjs",
      "@vyductan/eslint-config/tailwind"
    ],
    "root": true
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.0",
    "@vyductan/eslint-config": "*",
    "@vyductan/prettier-config": "*",
    "turbo": "latest",
    "typescript": "^5.1.6"
  },
  "packageManager": "bun@1.0.4",
  "engines": {
    "node": ">=v18.18.0"
  }
}
