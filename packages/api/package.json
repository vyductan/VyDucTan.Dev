{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@vyductan/api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./db": "./src/db.ts",
    "./auth": "./auth/index.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "type-check": "tsc --noEmit"
  },
  "prettier": "@vyductan/prettier-config",
  "eslintConfig": {
    "extends": [
      "@vyductan/eslint-config/base",
      "@vyductan/eslint-config/drizzle"
    ],
    "root": true
  },
  "dependencies": {
    "@auth/core": "^0.20.0",
    "@auth/drizzle-adapter": "^0.3.15",
    "@trpc/server": "next",
    "@vercel/blob": "^0.18.0",
    "@vercel/postgres": "^0.5.1",
    "@vyductan/utils": "workspace:*",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "google-auth-library": "^9.4.2",
    "nanoid": "^5.0.4",
    "next-auth": "^5.0.0-beta.3",
    "postgres-range": "^1.1.3",
    "superjson": "2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vyductan/eslint-config": "workspace:*",
    "@vyductan/prettier-config": "workspace:*",
    "@vyductan/typescript-config": "workspace:*",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.13",
    "pg": "^8.11.3"
  }
}
