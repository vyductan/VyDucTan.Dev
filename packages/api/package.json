{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./env": "./env.ts",
    "./types": "./src/types.ts",
    "./auth": {
      "react-server": "./src/auth/index.rsc.ts",
      "default": "./src/auth/index.ts"
    },
    "./db": "./src/db.ts",
    "./contact": "./src/contact/action.ts",
    "./projects/types": "./src/projects/types.ts",
    "./tasks/types": "./src/tasks/types.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf .turbo node_modules",
    "db:push": "pnpm with-env drizzle-kit push:pg --config src/config.ts",
    "db:studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "dev": "tsc --watch",
    "lint": "eslint",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@acme/prettier-config",
  "dependencies": {
    "@acme/utils": "workspace:*",
    "@auth/drizzle-adapter": "^0.9.0",
    "@trpc/server": "11.0.0-rc.334",
    "@vercel/blob": "^0.22.3",
    "@vercel/postgres": "^0.8.0",
    "drizzle-orm": "^0.30.8",
    "drizzle-zod": "^0.5.1",
    "nanoid": "^5.0.7",
    "next-auth": "^5.0.0-beta.15",
    "superjson": "2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/typescript-config": "workspace:*",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.14"
  }
}
