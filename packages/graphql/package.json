{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/graphql",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": "./src/*.ts"
  },
  "scripts": {
    "///build": "tsc",
    "//build": "grats && prettier --write schema.graphql schema.ts",
    "clean": "rm -rf .turbo node_modules",
    "dev": "tsc --watch",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "g": "bun run g.ts",
    "generate": "gql.tada generate-schema http://localhost:4000/graphql",
    "grats": "grats --watch",
    "lint": "eslint",
    "rover": "rover graph introspect http://localhost:4000/graphql --output schema.graphql",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@acme/prettier-config",
  "dependencies": {
    "drizzle-graphql": "^0.2.5",
    "gql.tada": "^1.5.2",
    "graphql": "^16.8.1",
    "graphql-config": "^5.0.3"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.10.1",
    "@acme/db": "workspace:*",
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "eslint": "^9.0.0",
    "grats": "^0.0.25",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
